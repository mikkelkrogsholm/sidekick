{
  "name": "voice-test",
  "version": "1.0.0",
  "type": "module",
  "description": "Live audio transcription using OpenAI Realtime API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "format": "prettier --write AGENTS.md CLAUDE.md CONTRIBUTING.md docs/PROJECT_SCOPE.md .github/pull_request_template.md .github/workflows/ci.yml eslint.config.js .prettierrc.json README.md package.json",
    "format:check": "prettier --check AGENTS.md CLAUDE.md CONTRIBUTING.md docs/PROJECT_SCOPE.md .github/pull_request_template.md .github/workflows/ci.yml eslint.config.js .prettierrc.json README.md package.json"
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "openai": "^5.19.1",
    "pdf-parse": "^1.1.1",
    "sqlite-vec": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^29.7.0",
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.2.0",
    "prettier": "^3.3.3",
    "util": "^0.12.5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "public/**/*.js",
      "server.js",
      "db.js",
      "!public/settings.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "18"
          },
          "modules": "commonjs"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
